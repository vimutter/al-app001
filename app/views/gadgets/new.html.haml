= form_for @gadget do |f|
  .row
    = f.label :name, t('.name')
    = f.text_field :name
  .row
    = f.label :description, t('.description')
    = f.text_area :description
  = f.fields_for :picture do |picture_form|
    .row
      = picture_form.file_field :image
    .row
      = link_to '#', t('.add_more')
  .row
    = f.submit
